@model AlunoModel
@{
    ViewData["Title"] = "Adicionar";
}

<div class="text-center">

    <div class="text-center">
        <a class="btn btn-primary" role="button">Adicionar Aluno</a>
    </div>
    <br />

    <h1 class="display-4">Adicionar Alunos</h1>
    <p>Adicione um aluno!</p>

    <form asp-controller="Aluno" asp-action="Adicionar" method="post">
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" id="editNome" placeholder="Nome do Aluno">
        </div>

        <div class="form-group">
            <label for="email">E-mail</label>
            <input type="text" asp-for="Email" class="form-control" id="editEmail" placeholder="Email do Aluno">
        </div>

        <div class="form-group">
            <label for="matriula">Número de Matrícula</label>
            <input type="text" asp-for="Matricula" class="form-control" id="editMatricula" placeholder="Número de Matrícula do Aluno">
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Cadastrar</button>
        <a class="btn btn-secondary" asp-controller="Aluno" asp-action="Index" role="button">Voltar</a>
    </form>
</div>
